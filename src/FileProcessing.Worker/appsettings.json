{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "MassTransit": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId",
      "WithEnvironmentUserName"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=filesdb;Username=postgres;Password=fileprocesspass"
  },

  "RabbitMQ": {
    "Host": "rabbitmq",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "MainQueue": "upload_queue",
    "RetryQueue": "upload_queue_retry",
    "DlqQueue": "upload_queue_dlq"
  },

  "FileStorage": {
    "RootTempPath": "/app/storage/temp",
    "RootFinalPath": "/app/storage/final"
  },

  "Storage": {
    "Local": {
      "BasePath": "/app/uploads"
    }
  },

  "Seq": {
    "Url": "http://seq:5341"
  }
}
