        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },

  "ConnectionStrings": {
    "Default": "Host=postgres;Database=filesdb;Username=dev;Password=dev",
    "Postgres": "Host=localhost;Port=5432;Username=fileuser;Password=filepass;Database=filedb"
  },

  "RabbitMQ": {
    "Host": "rabbitmq",
    "Username": "guest",
    "Password": "guest",
    "MainQueue": "upload_queue",
    "RetryQueue": "upload_queue_retry",
    "DlqQueue": "upload_queue_dlq"
  },

  "FileStorage": {
    "RootTempPath": "/app/storage/temp",
    "RootFinalPath": "/app/storage/final",
    "AllowedExtensions": [ ".pdf", ".txt", ".csv", ".json" ],
    "MaxFileSizeMB": 50
  },

  "Seq": {
    "Url": "http://seq:5341"
  },

  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "API Checks",
        "Uri": "/health"
      }
    ],
