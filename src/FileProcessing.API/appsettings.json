  "RabbitMQ": {
    "Host": "rabbitmq",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "MainQueue": "upload_queue",
    "RetryQueue": "upload_queue_retry",
    "DlqQueue": "upload_queue_dlq"
