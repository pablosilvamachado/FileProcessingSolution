{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Jwt": {
    "Key": "FSwqM8Wr0Yi2QiSVpWPm3SlCQS6vm7Djim7RdkTNXKy",
    "Issuer": "fileprocessing.api",
    "Audience": "fileprocessing.clients",
    "ExpiresMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
